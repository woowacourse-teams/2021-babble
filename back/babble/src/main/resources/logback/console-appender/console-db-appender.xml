<?xml version="1.0" encoding="UTF-8"?>
<included>
  <appender name="console-db-sql-appender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <charset>utf8</charset>
      <Pattern>
        %magenta([%d{yyyy-MM-dd HH:mm:ss}:%-4relative]) %highlight(%-5level) %yellow([%C.%M]:%boldWhite(%L)]) %msg%n%n
      </Pattern>
    </encoder>
  </appender>

  <appender name="console-db-value-appender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <charset>utf8</charset>
      <Pattern>
        %green( > %msg%n)
      </Pattern>
    </encoder>
  </appender>
</included>
